<meta charset="utf-8">
<script>
var otvet = 0 //правильные ответы 
var answer = '';
answer = prompt('Зимой и летом:')
if (answer == 'елка') {
	alert('правильно');
	otvet++;
} else {
	alert('неправильно');
}
answer = prompt('Висит груша:')
if (answer == 'лампочка') {
	alert('правильно');
	otvet++;
} else {
	alert('неправильно');
}
alert('Верных ответов: ' +otvet);
</script>
